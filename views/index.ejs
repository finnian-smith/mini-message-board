<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <h1>Mini Message Board</h1>
    <ul>
      <% messages.forEach((message) => { %>
      <li>
        <strong><%= message.username %>:</strong> <%= message.text %>
        <small>(<%= message.date.toDateString() %>)</small>
        <a href="/messages/<%= message.id %>">Open</a>
      </li>
      <% }) %>
    </ul>
    <a href="/new">Add a new message</a>
  </body>
</html>
